{
  "include": ["src/**/*"],
  "exclude": [    
    "mock/**/*",
    "node_modules",
    "scripts/",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "docs",
    "tests",
    "build"
  ],
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": "./",
      "strict": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@/*": [
          "src/*"
        ],
    },
    "experimentalDecorators": true,
    "jsxImportSource": "preact"
  }
}